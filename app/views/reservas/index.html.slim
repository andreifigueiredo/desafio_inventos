div class="container" 
    div class="row"
      h1 Histórico de reservas
      div class="table-responsive"
        table class="table"
          thead
            tr
              th Data da reserva
              th Preço Total
              th
          tbody
            - current_user.reservas.each do |reserva|
              tr
                td = reserva.data_da_reserva
                td = number_to_currency_br(reserva.preco_total)
                td = link_to 'Detalhes', reserva
      div class="d-flex justify-content-between align-itens-center"
        div class="btn-group"
          = link_to 'Voltar', root_path, class: "btn btn-sm btn-outline-secondary"
