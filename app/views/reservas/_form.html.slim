= form_for @reserva do |f|
  - if @reserva.errors.any?
    #error_explanation
      h2 = "#{pluralize(@reserva.errors.count, "error")} prohibited this reserva from being saved:"
      ul
        - @reserva.errors.full_messages.each do |message|
          li = message

  .field
    = f.label :data_da_reserva
    = f.date_select :data_da_reserva, required: true

  .actions = f.submit "Criar nova Reserva", class: "btn btn-sm btn-outline-secondary"
/ O total da reserva não é definido pelo usuário
    = f.label :preco_total
    = f.number_field :preco_total
