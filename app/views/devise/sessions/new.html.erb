<div class="text-center">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f| %>
    <div class="field">
    <%= f.label :email, class: "sr-only" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "from-control", placeholder: "Insira seu Email", required: true %>
    </div>
    <div class="field">
    <%= f.label :password , class: "sr-only" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "from-control", placeholder: "Insira sua Senha", required: true %>
    </div>
    <div class="field">
    <% if devise_mapping.rememberable? -%>
      <div class="checkbox mb-3">
        <label>
          <%= f.check_box :remember_me %>
        </label>
      </div>
    </div>
    <% end -%>
    <%= f.submit "Log in", class: "btn btn-lg" %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>